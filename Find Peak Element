class Solution {
    public int findPeakElement(int[] arr) {
        int max = arr[0];
        int max_index = 0;

        for(int i=0; i<arr.length; i++){
            if(arr[i] > max){
                max = arr[i];
                max_index = i;
            }
        }
        return max_index;
    }
}
